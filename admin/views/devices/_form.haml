- error = @device.errors.include?(:c_at)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :c_at, :class => 'control-label'
  .controls
    =f.text_field :c_at, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:c_at, :class => 'text-error') : pat(:example)
- error = @device.errors.include?(:u_at)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :u_at, :class => 'control-label'
  .controls
    =f.text_field :u_at, :class => 'form-control input-large input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:u_at, :class => 'text-error') : pat(:example)

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:devices, :index), :class => 'btn btn-default'